<GridLayout>:
    cols : 4
    spacing : 10
    Button:
        text : 'start'
        on_press : app.play_music(self)
    Button:
        text : 'stop'
        on_press : app.stop_music(self)
    Slider:
        id : lenght_track 
        min : 0
        max : 100
        value_track : True 
        value_track_color : [0.65, 0.19, 0.58, 1]
        on_value : app.seek_music(self, self.value)